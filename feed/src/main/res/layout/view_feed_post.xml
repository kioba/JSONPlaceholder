<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  >

  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/post_avatar"
    android:layout_width="64dp"
    android:layout_height="64dp"
    android:layout_marginStart="16dp"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/post_title"
    app:layout_constraintVertical_bias="0"
    tools:srcCompat="@drawable/ic_face_black_24dp"
    />

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/post_user_name"
    style="@style/TextAppearance.UserName"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/post_avatar"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="@string/user_name_example"
    />

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/post_title"
    style="@style/TextAppearance.PostTitle"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/post_avatar"
    app:layout_constraintTop_toBottomOf="@id/post_user_name"
    tools:text="@string/post_title_example"
    />

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/post_body"
    style="@style/TextAppearance.PostBody"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/post_avatar"
    app:layout_constraintTop_toBottomOf="@id/post_title"
    app:layout_constraintVertical_bias="0"
    tools:text="@string/post_body_example"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
